{% extends 'base.html.twig' %}

{% block title %}Modifier un artiste{% endblock %}

{% block body %}
    <div class="container">
        <h1>Modifier un artiste : {{ artist.name }}</h1>

        {# Affichage des messages flash #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <form method="post" enctype="multipart/form-data">
            {{ form_start(form) }}

            {{ form_row(form.name) }}
            {{ form_row(form.description) }}
            {{ form_row(form.image) }}
            {{ form_end(form) }}
        </form>

        <button><a href="{{ path('app_artists') }}" class="btn btn-secondary mt-3">Retour Ã  la liste des artistes</a></button>
    </div>
{% endblock %}
