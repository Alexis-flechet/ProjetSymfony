{% extends 'base.html.twig' %}

{% block title %}Créer un artiste{% endblock %}

{% block body %}
    <div class="container">
        <h1>Créer un nouvel artiste</h1>

        {# Affichage des messages flash #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <form method="post" enctype="multipart/form-data">
            {{ form_start(form) }}

            {{ form_row(form.name) }}
            {{ form_row(form.description) }}
            {{ form_row(form.image) }}

            {{ form_end(form) }}
        </form>

        <a href="{{ path('app_artists') }}" class="btn btn-secondary mt-3">Retour à la liste des artistes</a>
    </div>
{% endblock %}
